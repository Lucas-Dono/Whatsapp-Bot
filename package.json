{
    "name": "mi-bot-cerveceria-whatsappweb",
    "version": "1.0.0",
    "description": "Bot de WhatsApp para CervecerÃ­a 6600 usando whatsapp-web.js, ChatGPT y Google Sheets.",
    "main": "src/index.js",
    "scripts": {
        "prestart": "node src/pre-start.js",
        "start": "node src/index.js",
        "dev": "node src/pre-start.js && nodemon src/index.js",
        "update-server": "node src/pre-start.js && node src/update-server.js",
        "start-update-server": "node src/pre-start.js && node src/start-update-server.js",
        "start-all": "node src/pre-start.js && pm2 start ecosystem.config.cjs",
        "start-windows": "node src/pre-start.js && start-all.bat",
        "start-ps": "node src/pre-start.js && powershell -ExecutionPolicy Bypass -File start-all.ps1",
        "start-direct": "node src/pre-start.js && start cmd /k \"node src/index.js\" && start cmd /k \"cd cerveceria-admin-ui && npm start\"",
        "start-network": "node src/network-start.js",
        "update-ip": "node src/update-frontend-config.js",
        "github-updater": "node src/start-github-updater.js",
        "check-updates": "node -e \"import('./src/github-updater.js').then(mod => mod.manualCheckAndUpdate())\"",
        "stop-all": "pm2 stop all",
        "restart-all": "pm2 restart all",
        "status": "pm2 status"
    },
    "dependencies": {
        "@pdf-lib/upng": "^1.0.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.21.2",
        "fetch": "^1.1.0",
        "googleapis": "^144.0.0",
        "node-fetch": "^3.3.2",
        "node-tesseract-ocr": "^2.2.1",
        "openai": "^4.85.4",
        "pdf-lib": "^1.17.1",
        "pdf-parse": "^1.1.1",
        "pdf2json": "^3.1.5",
        "pdf2pic": "^3.1.4",
        "pm2": "^5.4.3",
        "qrcode": "^1.5.4",
        "qrcode-terminal": "^0.12.0",
        "tesseract.js": "^4.1.4",
        "whatsapp-web.js": "^1.26.0"
    },
    "type": "module",
    "engines": {
        "node": ">=18.0.0"
    }
}
